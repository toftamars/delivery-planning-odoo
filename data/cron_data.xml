<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Günlük Araç Kapasitesi Sıfırlama Cron Job -->
        <record id="ir_cron_reset_daily_deliveries" model="ir.cron">
            <field name="name">Teslimat Araçları - Günlük Kapasite Sıfırlama</field>
            <field name="model_id" ref="fleet.model_fleet_vehicle"/>
            <field name="state">code</field>
            <field name="code">model.reset_daily_deliveries()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
