<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Varsayılan Teslimat Ayarları -->
        
        <!-- Teslimat Durumları -->
        <record id="delivery_state_draft" model="delivery.state">
            <field name="name">Taslak</field>
            <field name="code">draft</field>
            <field name="sequence">10</field>
        </record>

        <record id="delivery_state_confirmed" model="delivery.state">
            <field name="name">Onaylandı</field>
            <field name="code">confirmed</field>
            <field name="sequence">20</field>
        </record>

        <record id="delivery_state_in_progress" model="delivery.state">
            <field name="name">Devam Ediyor</field>
            <field name="code">in_progress</field>
            <field name="sequence">30</field>
        </record>

        <record id="delivery_state_completed" model="delivery.state">
            <field name="name">Tamamlandı</field>
            <field name="code">completed</field>
            <field name="sequence">40</field>
        </record>

        <record id="delivery_state_cancelled" model="delivery.state">
            <field name="name">İptal Edildi</field>
            <field name="code">cancelled</field>
            <field name="sequence">50</field>
        </record>
    </data>
</odoo>
