<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Bölge Tree View -->
        <record id="view_delivery_region_tree" model="ir.ui.view">
            <field name="name">delivery.region.tree</field>
            <field name="model">delivery.region</field>
            <field name="arch" type="xml">
                <tree string="Teslimat Bölgeleri">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="continent"/>
                    <field name="is_active"/>
                    <field name="total_deliveries"/>
                    <field name="total_distance"/>
                    <field name="average_delivery_time"/>
                </tree>
            </field>
        </record>

        <!-- Bölge Form View -->
        <record id="view_delivery_region_form" model="ir.ui.view">
            <field name="name">delivery.region.form</field>
            <field name="model">delivery.region</field>
            <field name="arch" type="xml">
                <form string="Teslimat Bölgesi">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="continent"/>
                                <field name="is_active"/>
                            </group>
                            <group>
                                <field name="total_deliveries"/>
                                <field name="total_distance"/>
                                <field name="average_delivery_time"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Aktif Günler">
                                <field name="active_days" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Bölge Search View -->
        <record id="view_delivery_region_search" model="ir.ui.view">
            <field name="name">delivery.region.search</field>
            <field name="model">delivery.region</field>
            <field name="arch" type="xml">
                <search string="Bölge Ara">
                    <field name="name"/>
                    <field name="code"/>
                    <filter string="Aktif" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Anadolu" name="anadolu" domain="[('continent', '=', 'anadolu')]"/>
                    <filter string="Avrupa" name="avrupa" domain="[('continent', '=', 'avrupa')]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Kıta" name="continent" context="{'group_by':'continent'}"/>
                        <filter string="Aktif Durum" name="active_status" context="{'group_by':'is_active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Bölge Action -->
        <record id="action_delivery_regions" model="ir.actions.act_window">
            <field name="name">Teslimat Bölgeleri</field>
            <field name="res_model">delivery.region</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_delivery_region_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    İlk teslimat bölgenizi oluşturun!
                </p>
                <p>
                    Teslimat bölgelerini tanımlayarak günlük teslimat programları oluşturabilir
                    ve bölge bazlı araç atamaları yapabilirsiniz.
                </p>
            </field>
        </record>

        <!-- Günlük Program Tree View -->
        <record id="view_delivery_schedule_day_tree" model="ir.ui.view">
            <field name="name">delivery.schedule.day.tree</field>
            <field name="model">delivery.schedule.day</field>
            <field name="arch" type="xml">
                <tree string="Teslimat Programı">
                    <field name="name"/>
                    <field name="day_number"/>
                    <field name="is_active"/>
                    <field name="anadolu_regions" widget="many2many_tags"/>
                    <field name="avrupa_regions" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <!-- Günlük Program Form View -->
        <record id="view_delivery_schedule_day_form" model="ir.ui.view">
            <field name="name">delivery.schedule.day.form</field>
            <field name="model">delivery.schedule.day</field>
            <field name="arch" type="xml">
                <form string="Teslimat Programı Günü">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="day_number"/>
                                <field name="is_active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Anadolu Bölgeleri">
                                <field name="anadolu_regions" widget="many2many_tags"/>
                            </page>
                            <page string="Avrupa Bölgeleri">
                                <field name="avrupa_regions" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Günlük Program Action -->
        <record id="action_delivery_schedule_days" model="ir.actions.act_window">
            <field name="name">Teslimat Programı</field>
            <field name="res_model">delivery.schedule.day</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    İlk teslimat programınızı oluşturun!
                </p>
                <p>
                    Günlük teslimat programları oluşturarak hangi bölgelerin
                    hangi günlerde teslimat yapacağını belirleyebilirsiniz.
                </p>
            </field>
        </record>
    </data>
</odoo>
