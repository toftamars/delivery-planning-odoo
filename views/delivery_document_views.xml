<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teslimat Belgesi Tree View -->
        <record id="view_delivery_document_tree" model="ir.ui.view">
            <field name="name">delivery.document.tree</field>
            <field name="model">delivery.document</field>
            <field name="arch" type="xml">
                <tree string="Teslimat Belgesi">
                    <field name="reference"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="vehicle_id"/>
                    <field name="district_id"/>
                    <field name="transfer_count"/>
                    <field name="district_count"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Teslimat Belgesi Form View -->
        <record id="view_delivery_document_form" model="ir.ui.view">
            <field name="name">delivery.document.form</field>
            <field name="model">delivery.document</field>
            <field name="arch" type="xml">
                <form string="Teslimat Belgesi">
                    <header>
                        <button name="action_confirm" string="Onayla" type="object" 
                                states="draft" class="oe_highlight"/>
                        <button name="action_start" string="Başlat" type="object" 
                                states="confirmed" class="oe_highlight"/>
                        <button name="action_complete" string="Tamamla" type="object" 
                                states="in_progress" class="oe_highlight"/>
                        <button name="action_cancel" string="İptal Et" type="object" 
                                states="draft,confirmed,in_progress"/>
                        <button name="action_reset_draft" string="Taslağa Döndür" type="object" 
                                states="cancelled"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,confirmed,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="reference" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="partner_id"/>
                                <field name="vehicle_id" domain="[('is_available', '=', True), ('is_temporarily_closed', '=', False)]"/>
                                <field name="district_id"/>
                            </group>
                            <group>
                                <field name="transfer_count"/>
                                <field name="district_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Fotoğraflar">
                                <group>
                                    <group>
                                        <field name="photo_before_installation" widget="image"/>
                                        <field name="photo_during_installation" widget="image"/>
                                        <field name="photo_after_installation" widget="image"/>
                                    </group>
                                    <group>
                                        <field name="photo_issue" widget="image"/>
                                        <field name="photo_completion" widget="image"/>
                                        <field name="photo_other" widget="image"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notlar">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Teslimat Belgesi Search View -->
        <record id="view_delivery_document_search" model="ir.ui.view">
            <field name="name">delivery.document.search</field>
            <field name="model">delivery.document</field>
            <field name="arch" type="xml">
                <search string="Teslimat Belgesi Ara">
                    <field name="reference"/>
                    <field name="partner_id"/>
                    <field name="vehicle_id"/>
                    <field name="district_id"/>
                    <filter string="Taslak" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Onaylandı" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Devam Ediyor" name="in_progress" domain="[('state','=','in_progress')]"/>
                    <filter string="Tamamlandı" name="completed" domain="[('state','=','completed')]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Durum" name="state" context="{'group_by':'state'}"/>
                        <filter string="Araç" name="vehicle" context="{'group_by':'vehicle_id'}"/>
                        <filter string="İlçe" name="district" context="{'group_by':'district_id'}"/>
                        <filter string="Tarih" name="date" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Teslimat Belgesi Action -->
        <record id="action_delivery_document" model="ir.actions.act_window">
            <field name="name">Teslimat Belgesi</field>
            <field name="res_model">delivery.document</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_delivery_document_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    İlk teslimat belgenizi oluşturun!
                </p>
                <p>
                    Teslimat belgeleri oluşturarak müşteri, araç ve ilçe bilgilerini
                    kaydedebilir ve fotoğraf ekleyebilirsiniz.
                </p>
            </field>
        </record>
    </data>
</odoo>
