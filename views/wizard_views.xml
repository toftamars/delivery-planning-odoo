<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Araç Kapatma Wizard Form -->
        <record id="view_vehicle_close_wizard_form" model="ir.ui.view">
            <field name="name">delivery.vehicle.close.wizard.form</field>
            <field name="model">delivery.vehicle.close.wizard</field>
            <field name="arch" type="xml">
                <form string="Araç Geçici Kapatma">
                    <group>
                        <field name="vehicle_id" readonly="1"/>
                        <field name="closed_reason" placeholder="Aracı kapatma nedenini yazın..."/>
                    </group>
                    <footer>
                        <button name="action_close_vehicle" string="Kapat" type="object" class="btn-primary"/>
                        <button string="İptal" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Araç Kapatma Wizard Action -->
        <record id="action_vehicle_close_wizard" model="ir.actions.act_window">
            <field name="name">Araç Geçici Kapatma</field>
            <field name="res_model">delivery.vehicle.close.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
