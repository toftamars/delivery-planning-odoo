<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Teslimat Noktası Tree View -->
        <record id="view_delivery_point_tree" model="ir.ui.view">
            <field name="name">delivery.point.tree</field>
            <field name="model">delivery.point</field>
            <field name="arch" type="xml">
                <tree string="Teslimat Noktaları">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="district"/>
                    <field name="address"/>
                    <field name="distance_from_previous"/>
                    <field name="estimated_time"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Teslimat Noktası Form View -->
        <record id="view_delivery_point_form" model="ir.ui.view">
            <field name="name">delivery.point.form</field>
            <field name="model">delivery.point</field>
            <field name="arch" type="xml">
                <form string="Teslimat Noktası">
                    <header>
                        <button name="action_start_delivery" string="Başlat" type="object" 
                                states="pending" class="oe_highlight"/>
                        <button name="action_complete_delivery" string="Tamamla" type="object" 
                                states="in_progress" class="oe_highlight"/>
                        <button name="action_fail_delivery" string="Başarısız" type="object" 
                                states="in_progress"/>
                        <button name="action_reset_pending" string="Sıfırla" type="object" 
                                states="completed,failed"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="pending,in_progress,completed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="district"/>
                                <field name="address"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="distance_from_previous"/>
                                <field name="estimated_time"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="package_count"/>
                                <field name="weight"/>
                            </group>
                            <group>
                                <field name="delivery_time"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Özel Talimatlar">
                                <field name="special_instructions"/>
                            </page>
                            <page string="Notlar">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Teslimat Noktası Search View -->
        <record id="view_delivery_point_search" model="ir.ui.view">
            <field name="name">delivery.point.search</field>
            <field name="model">delivery.point</field>
            <field name="arch" type="xml">
                <search string="Teslimat Noktası Ara">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="district"/>
                    <filter string="Bekliyor" name="pending" domain="[('state','=','pending')]"/>
                    <filter string="Devam Ediyor" name="in_progress" domain="[('state','=','in_progress')]"/>
                    <filter string="Tamamlandı" name="completed" domain="[('state','=','completed')]"/>
                    <filter string="Başarısız" name="failed" domain="[('state','=','failed')]"/>
                    <group expand="0" string="Grupla">
                        <filter string="Durum" name="state" context="{'group_by':'state'}"/>
                        <filter string="Müşteri" name="partner" context="{'group_by':'partner_id'}"/>
                        <filter string="İlçe" name="district" context="{'group_by':'district'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Teslimat Noktası Action -->
        <record id="action_delivery_point" model="ir.actions.act_window">
            <field name="name">Teslimat Noktaları</field>
            <field name="res_model">delivery.point</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_delivery_point_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    İlk teslimat noktanızı oluşturun!
                </p>
                <p>
                    Teslimat noktalarını tanımlayarak müşteri bilgilerini,
                    adres detaylarını ve teslimat sürelerini kaydedebilirsiniz.
                </p>
            </field>
        </record>
    </data>
</odoo>
