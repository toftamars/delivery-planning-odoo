<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Teslimat Planı -->
        <record id="demo_delivery_planning" model="delivery.planning">
            <field name="name">Demo Teslimat Planı</field>
            <field name="date" eval="(DateTime.today() + timedelta(days=1)).strftime('%Y-%m-%d')"/>
            <field name="vehicle_id" ref="fleet.vehicle_1"/>
            <field name="driver_id" ref="base.res_partner_1"/>
            <field name="state">draft</field>
            <field name="notes">Bu bir demo teslimat planıdır.</field>
        </record>

        <!-- Demo Teslimat Noktaları -->
        <record id="demo_delivery_point_1" model="delivery.point">
            <field name="name">Demo Nokta 1</field>
            <field name="planning_id" ref="demo_delivery_planning"/>
            <field name="partner_id" ref="base.res_partner_1"/>
            <field name="district">Maltepe</field>
            <field name="address">Demo Adres 1, İstanbul</field>
            <field name="phone">0212 123 45 67</field>
            <field name="distance_from_previous">0</field>
            <field name="estimated_time">30</field>
            <field name="package_count">2</field>
            <field name="weight">5.5</field>
        </record>

        <record id="demo_delivery_point_2" model="delivery.point">
            <field name="name">Demo Nokta 2</field>
            <field name="planning_id" ref="demo_delivery_planning"/>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="district">Kartal</field>
            <field name="address">Demo Adres 2, İstanbul</field>
            <field name="phone">0216 987 65 43</field>
            <field name="distance_from_previous">15.5</field>
            <field name="estimated_time">45</field>
            <field name="package_count">1</field>
            <field name="weight">3.2</field>
        </record>
    </data>
</odoo>
